<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Drone Control System</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.js"></script>
    <style>
        :root {
            --bg-primary: #1a1a1a;
            --bg-secondary: #2d2d2d;
            --bg-tertiary: #333333;
            --text-primary: #ffffff;
            --text-secondary: #b3b3b3;
            --accent-blue: #3b82f6;
            --accent-green: #22c55e;
            --accent-red: #ef4444;
            --accent-purple: #8b5cf6;
            --border-color: #404040;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: var(--bg-primary);
            color: var(--text-primary);
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header */
        .header {
            background: var(--bg-secondary);
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            border: 1px solid var(--border-color);
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .title {
            font-size: 24px;
            font-weight: bold;
        }

        /* Status Indicators */
        .status-indicators {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: var(--accent-red);
            margin-right: 8px;
        }

        .status-dot.connected {
            background-color: var(--accent-green);
        }

        /* Main Layout */
        .main-content {
            display: grid;
            grid-template-columns: 350px 1fr;
            gap: 20px;
            height: calc(100vh - 120px);
        }

        /* Control Panel */
        .control-panel {
            background: var(--bg-secondary);
            border-radius: 8px;
            padding: 20px;
            border: 1px solid var(--border-color);
            overflow-y: auto;
        }

        .section-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--text-primary);
        }

        .control-section {
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--border-color);
        }

        /* Form Controls */
        .input-group {
            margin-bottom: 15px;
        }

        .input-group label {
            display: block;
            margin-bottom: 8px;
            color: var(--text-secondary);
        }

        .input-row {
            display: flex;
            gap: 10px;
        }

        input[type="number"] {
            flex: 1;
            padding: 8px 12px;
            background: var(--bg-tertiary);
            border: 1px solid var(--border-color);
            border-radius: 4px;
            color: var(--text-primary);
        }

        /* Buttons */
        .btn {
            padding: 10px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 500;
            transition: opacity 0.2s;
            width: 100%;
            margin-bottom: 8px;
        }

        .btn:hover {
            opacity: 0.9;
        }

        .btn-blue {
            background-color: var(--accent-blue);
            color: white;
        }

        .btn-green {
            background-color: var(--accent-green);
            color: white;
        }

        .btn-red {
            background-color: var(--accent-red);
            color: white;
        }

        .btn-purple {
            background-color: var(--accent-purple);
            color: white;
        }

        /* Video Section */
        .video-section {
            display: flex;
            flex-direction: column;
            gap: 20px;
            height: 100%;
        }

        .video-feeds {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            flex: 1;
        }

        .video-container {
            background: var(--bg-secondary);
            border-radius: 8px;
            overflow: hidden;
            position: relative;
            border: 1px solid var(--border-color);
        }

        .video-label {
            position: absolute;
            top: 10px;
            left: 10px;
            background: rgba(0, 0, 0, 0.7);
            padding: 5px 10px;
            border-radius: 4px;
            z-index: 10;
        }

        .video-feed {
            width: 100%;
            height: 100%;
            object-fit: cover;
            background: var(--bg-tertiary);
        }

        /* Status Grid */
        .status-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
            margin-top: 15px;
        }

        .status-item {
            background: var(--bg-tertiary);
            padding: 15px;
            border-radius: 4px;
            border: 1px solid var(--border-color);
        }

        .status-label {
            font-size: 12px;
            color: var(--text-secondary);
            margin-bottom: 5px;
        }

        .status-value {
            font-size: 16px;
            font-weight: 600;
            color: var(--text-primary);
        }

        /* Alerts Panel */
        .alerts-panel {
            background: var(--bg-secondary);
            border-radius: 8px;
            padding: 20px;
            border: 1px solid var(--border-color);
            max-height: 200px;
            overflow-y: auto;
        }

        .alert-item {
            background: var(--bg-tertiary);
            border-left: 4px solid var(--accent-red);
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 4px;
        }

        /* Corner Grid */
        .corner-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
            margin-bottom: 15px;
        }

        .detection-section {
        background: var(--bg-secondary);
        border-radius: 8px;
        border: 1px solid var(--border-color);
        margin-top: 20px;
        }

        .detection-panels {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            padding: 20px;
        }

        .detection-log-panel {
            background: var(--bg-tertiary);
            border-radius: 8px;
            padding: 15px;
            border: 1px solid var(--border-color);
        }

        .detection-filters {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
        }

        .filter-btn {
            padding: 5px 10px;
            background: var(--bg-secondary);
            border: 1px solid var(--border-color);
            border-radius: 4px;
            color: var(--text-secondary);
            cursor: pointer;
            transition: all 0.2s;
        }

        .filter-btn.active {
            background: var(--accent-blue);
            color: white;
            border-color: var(--accent-blue);
        }

        .detection-list {
            max-height: 300px;
            overflow-y: auto;
        }

        .detection-item {
            background: var(--bg-secondary);
            border-radius: 4px;
            padding: 10px;
            margin-bottom: 8px;
            border-left: 4px solid transparent;
            font-size: 14px;
        }

        .detection-item.high-threat {
            border-left-color: var(--accent-red);
        }

        .detection-item.medium-threat {
            border-left-color: var(--accent-purple);
        }

        .detection-item.low-threat {
            border-left-color: var(--accent-green);
        }

        .detection-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
        }

        .detection-time {
            color: var(--text-secondary);
            font-size: 12px;
        }

        .detection-details {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 8px;
            margin-top: 5px;
        }

        .detection-stat {
            font-size: 12px;
            color: var(--text-secondary);
        }

        .confidence-bar {
            height: 4px;
            background: var(--bg-primary);
            border-radius: 2px;
            margin-top: 3px;
        }

        .confidence-level {
            height: 100%;
            border-radius: 2px;
            transition: width 0.3s ease;
        }

        .high-confidence {
            background-color: var(--accent-green);
        }

        .medium-confidence {
            background-color: var(--accent-purple);
        }

        .low-confidence {
            background-color: var(--accent-red);
        }

        .alert-settings {
        background: var(--bg-tertiary);
        padding: 15px;
        border-radius: 4px;
        border: 1px solid var(--border-color);
        }

        .setting-item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            gap: 10px;
        }

        /* Switch Toggle */
        .switch {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 24px;
        }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: var(--bg-secondary);
            transition: .4s;
            border-radius: 24px;
            border: 1px solid var(--border-color);
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 4px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .slider {
            background-color: var(--accent-blue);
        }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

        /* Volume Slider */
        input[type="range"] {
            -webkit-appearance: none;
            width: 100%;
            height: 4px;
            border-radius: 2px;
            background: var(--bg-secondary);
            outline: none;
        }

        input[type="range"]::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background: var(--accent-blue);
            cursor: pointer;
        }

        /* Alert Animation */
        @keyframes alertPulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }

        .detection-item.high-threat.active-alert {
            animation: alertPulse 1s infinite;
        }
    </style>
</head>
<body>
    <!-- Audio Elements -->
    <audio id="high-threat-audio" preload="auto">
        <source src="data:audio/mpeg;base64," type="audio/mpeg">
    </audio>
    <audio id="medium-threat-audio" preload="auto">
        <source src="data:audio/mpeg;base64," type="audio/mpeg">
    </audio>

    <div class="container">
        <!-- Header -->
        <div class="header">
            <div class="header-content">
                <h1 class="title">Drone Control System</h1>
                <div class="status-indicators">
                    <div class="name">Logged In User: <%= user.name %></div>
                    <div class="connection-status">
                        <span class="status-dot" id="connection-status-dot"></span>
                        <span id="connection-status">Disconnected</span>
                    </div>
                    <div id="battery-indicator">Battery: N/A</div>
                    <div id="mission-timer" class="font-mono">00:00:00</div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Control Panel -->
            <div class="control-panel">
                <div class="control-section">
                    <h2 class="section-title">Alert Settings</h2>
                    <div class="alert-settings">
                        <div class="setting-item">
                            <label class="switch">
                                <input type="checkbox" id="audio-alerts" checked>
                                <span class="slider"></span>
                            </label>
                            <span>Audio Alerts</span>
                        </div>
                        <div class="setting-item">
                            <label>Volume</label>
                            <input type="range" id="alert-volume" min="0" max="100" value="50">
                        </div>
                    </div>
                </div>

                <!-- Video Controls -->
                <div class="control-section">
                    <h2 class="section-title">Video Controls</h2>
                    <button onclick="startVideo()" class="btn btn-blue">Start Video</button>
                    <button onclick="stopVideo()" class="btn btn-red">Stop Video</button>
                </div>

                <!-- Height & Size Controls -->
                <div class="control-section">
                    <h2 class="section-title">Patrol Configuration</h2>
                    <div class="input-group">
                        <label>Height (2-30 meters)</label>
                        <div class="input-row">
                            <input type="number" id="height-input" min="2" max="30" value="10">
                            <button onclick="setHeight()" class="btn btn-blue" style="width: auto">Set</button>
                        </div>
                    </div>
                    <div class="input-group">
                        <label>Square Size (meters)</label>
                        <div class="input-row">
                            <input type="number" id="square-size-input" min="1" value="10">
                            <button onclick="setSquareSize()" class="btn btn-blue" style="width: auto">Set</button>
                        </div>
                    </div>
                </div>

                <!-- Corner Patrol -->
                <div class="control-section">
                    <h2 class="section-title">Corner Patrol</h2>
                    <div class="corner-grid">
                        <button onclick="patrolCorner('top_right')" class="btn btn-blue">Top Right</button>
                        <button onclick="patrolCorner('top_left')" class="btn btn-blue">Top Left</button>
                        <button onclick="patrolCorner('bottom_left')" class="btn btn-blue">Bottom Left</button>
                        <button onclick="patrolCorner('bottom_right')" class="btn btn-blue">Bottom Right</button>
                    </div>
                </div>

                <!-- Patrol Controls -->
                <div class="control-section">
                    <h2 class="section-title">Patrol Controls</h2>
                    <button onclick="startSquarePatrol()" class="btn btn-green">Start Square Patrol</button>
                    <button onclick="startRandomPatrol()" class="btn btn-purple">Start Random Patrol</button>
                    <button onclick="stopPatrol()" class="btn btn-red">Stop Patrol</button>
                </div>

                <!-- Status Grid -->
                <div class="control-section">
                    <h2 class="section-title">Status</h2>
                    <div class="status-grid">
                        <div class="status-item">
                            <div class="status-label">Status</div>
                            <div id="patrol-status" class="status-value">Idle</div>
                        </div>
                        <div class="status-item">
                            <div class="status-label">Battery</div>
                            <div id="battery-level" class="status-value">N/A</div>
                        </div>
                        <div class="status-item">
                            <div class="status-label">Points Covered</div>
                            <div id="points-covered" class="status-value">0</div>
                        </div>
                        <div class="status-item">
                            <div class="status-label">Current Height</div>
                            <div id="current-height" class="status-value">0m</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Video Section -->
            <div class="video-section">
                <div class="video-feeds">
                    <div class="video-container">
                        <div class="video-label">Raw Feed</div>
                        <img id="raw-feed" class="video-feed" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" alt="Raw Feed">
                    </div>
                    <div class="video-container">
                        <div class="video-label">Detection Feed</div>
                        <img id="detection-feed" class="video-feed" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" alt="Detection Feed">
                    </div>
                </div>

                
                 <!-- Add this new section right before the Alerts Panel in the video-section div -->
                <div class="detection-section">
                    <div class="detection-panels">
                        <div class="detection-log-panel">
                            <h2 class="section-title">All Detections</h2>
                            <div class="detection-filters">
                                <button onclick="filterDetections('all')" class="filter-btn active">All</button>
                                <button onclick="filterDetections('high')" class="filter-btn">High Threat</button>
                                <button onclick="filterDetections('medium')" class="filter-btn">Medium</button>
                                <button onclick="filterDetections('low')" class="filter-btn">Low</button>
                            </div>
                            <div id="detection-list" class="detection-list"></div>
                        </div>
                        <div class="alerts-panel">
                            <h2 class="section-title">Threat Alerts</h2>
                            <div id="alerts-list"></div>
                        </div>
                    </div>
                </div>
                
                <!-- Alerts Panel -->
                <div class="alerts-panel">
                    <h2 class="section-title">Threat Alerts</h2>
                    <div id="alerts-list"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const socket = io('http://localhost:5000');
        let missionTimer = null;
        let startTime = null;
        let currentFilter = 'all';
        let detectionHistory = [];

        socket.on('detection_update', (data) => {
            const detection = {
                id: Date.now(),
                timestamp: new Date(),
                ...data
            };
            
            detectionHistory.unshift(detection);
            if (detectionHistory.length > 50) {
                detectionHistory.pop();
            }
            
            updateDetectionList();
        });

        function filterDetections(filter) {
            currentFilter = filter;
            updateDetectionList();
            
            // Update active filter button
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.toggle('active', btn.innerText.toLowerCase().includes(filter));
            });
        }

        function updateDetectionList() {
            const detectionList = document.getElementById('detection-list');
            detectionList.innerHTML = '';

            const filteredDetections = detectionHistory.filter(detection => {
                if (currentFilter === 'all') return true;
                return detection.threat_level === currentFilter;
            });

            filteredDetections.forEach(detection => {
                const detectionEl = document.createElement('div');
                detectionEl.className = `detection-item ${detection.threat_level}-threat`;

                const confidenceLevel = detection.confidence * 100;
                const confidenceClass = confidenceLevel > 80 ? 'high' : 
                                    confidenceLevel > 50 ? 'medium' : 'low';

                detectionEl.innerHTML = `
                    <div class="detection-header">
                        <strong>${detection.class}</strong>
                        <span class="detection-time">
                            ${detection.timestamp.toLocaleTimeString()}
                        </span>
                    </div>
                    <div class="detection-details">
                        <div class="detection-stat">
                            Location: ${detection.location || 'Unknown'}
                        </div>
                        <div class="detection-stat">
                            Threat: ${detection.threat_level.toUpperCase()}
                        </div>
                        <div class="detection-stat">
                            Confidence: ${confidenceLevel.toFixed(1)}%
                            <div class="confidence-bar">
                                <div class="confidence-level ${confidenceClass}-confidence" 
                                    style="width: ${confidenceLevel}%"></div>
                            </div>
                        </div>
                        <div class="detection-stat">
                            Status: ${detection.status || 'Active'}
                        </div>
                    </div>
                `;

                detectionList.appendChild(detectionEl);
                });
            }

        // Connection Handling
        socket.on('connect', () => {
            document.getElementById('connection-status-dot').classList.add('connected');
            document.getElementById('connection-status').textContent = 'Connected';
        });

        socket.on('disconnect', () => {
            document.getElementById('connection-status-dot').classList.remove('connected');
            document.getElementById('connection-status').textContent = 'Disconnected';
            stopMissionTimer();
        });

        // Status Updates
        socket.on('status_update', (data) => {
            document.getElementById('battery-level').textContent = `${data.battery}%`;
            document.getElementById('battery-indicator').textContent = `Battery: ${data.battery}%`;
        });

        socket.on('patrol_status', (data) => {
            document.getElementById('patrol-status').textContent = data.status;
            document.getElementById('points-covered').textContent = data.points_covered;
            document.getElementById('current-height').textContent = `${data.height}m`;
            
            if (data.status === 'patrolling' && !missionTimer) {
                startMissionTimer();
            } else if (data.status === 'idle' && missionTimer) {
                stopMissionTimer();
            }
        });

        // Video Feeds
        socket.on('video_frame', (data) => {
            document.getElementById('raw-feed').src = `data:image/jpeg;base64,${data.frame}`;
        });

        socket.on('detection_frame', (data) => {
            document.getElementById('detection-feed').src = `data:image/jpeg;base64,${data.frame}`;
            
            if (data.detections && data.detections.length > 0) {
                data.detections.forEach(detection => {
                    socket.emit('detection_update', {
                        class: detection.class,
                        confidence: detection.confidence,
                        threat_level: detection.threat_level,
                        location: detection.location || `(${detection.box.join(', ')})`
                    });
                });
            }
        });

        // Threat Alerts
        socket.on('threat_alert', (data) => {
            const alertsList = document.getElementById('alerts-list');
            const alertItem = document.createElement('div');
            alertItem.className = 'alert-item';
            
            const timestamp = new Date(data.timestamp).toLocaleTimeString();
            const threats = data.threats.map(t => t.class).join(', ');
            
            alertItem.innerHTML = `
                <strong>${timestamp}</strong><br>
                Detected: ${threats}<br>
                Location: ${data.location}
            `;
            
            alertsList.insertBefore(alertItem, alertsList.firstChild);
            
            if (alertsList.children.length > 5) {
                alertsList.removeChild(alertsList.lastChild);
            }
        });

        // Control Functions
        function setHeight() {
            const height = document.getElementById('height-input').value;
            socket.emit('set_patrol_height', { height: parseFloat(height) });
        }

        function setSquareSize() {
            const size = document.getElementById('square-size-input').value;
            socket.emit('set_square_size', { size: parseFloat(size) });
        }

        function startVideo() {
            socket.emit('start_video');
        }

        function stopVideo() {
            socket.emit('stop_video');
        }

        function patrolCorner(corner) {
            socket.emit('patrol_corner', { corner: corner });
        }

        function startSquarePatrol() {
            socket.emit('start_square_patrol');
        }

        function startRandomPatrol() {
            socket.emit('start_random_patrol');
        }

        function stopPatrol() {
            socket.emit('stop_patrol');
        }

        // Timer Functions
        function startMissionTimer() {
            startTime = Date.now();
            missionTimer = setInterval(updateTimer, 1000);
        }

        function stopMissionTimer() {
            if (missionTimer) {
                clearInterval(missionTimer);
                missionTimer = null;
                document.getElementById('mission-timer').textContent = '00:00:00';
            }
        }

        function updateTimer() {
            const elapsed = Math.floor((Date.now() - startTime) / 1000);
            const hours = Math.floor(elapsed / 3600).toString().padStart(2, '0');
            const minutes = Math.floor((elapsed % 3600) / 60).toString().padStart(2, '0');
            const seconds = (elapsed % 60).toString().padStart(2, '0');
            document.getElementById('mission-timer').textContent = `${hours}:${minutes}:${seconds}`;
        }

        // Message Handling
        socket.on('message', (data) => {
            console.log(`${data.type}: ${data.data}`);
            // You could add a toast notification system here
        });

        socket.on('corner_patrol_status', (data) => {
            if (data.status === 'started') {
                console.log(`Started patrolling ${data.corner}`);
            } else if (data.status === 'completed') {
                console.log(`Completed patrol of ${data.corner}`);
            }
        });

        socket.on('mission_complete', (data) => {
            const minutes = Math.floor(data.duration / 60);
            const seconds = data.duration % 60;
            console.log(`Mission completed in ${minutes}m ${seconds}s`);
            console.log(`Points covered: ${data.points_covered}`);
            console.log(`Threats detected: ${data.threats_detected}`);
            console.log(`Battery remaining: ${data.battery_used}%`);
        });

        // Initial setup
        document.addEventListener('DOMContentLoaded', () => {
            // Set initial values
            const heightInput = document.getElementById('height-input');
            const sizeInput = document.getElementById('square-size-input');
            
            // Ensure height is within bounds
            heightInput.addEventListener('change', () => {
                const value = parseFloat(heightInput.value);
                if (value < 2) heightInput.value = 2;
                if (value > 30) heightInput.value = 30;
            });

            // Ensure size is positive
            sizeInput.addEventListener('change', () => {
                const value = parseFloat(sizeInput.value);
                if (value < 1) sizeInput.value = 1;
            });
        });

            // Audio Alert System
        class AlertSystem {
            constructor() {
                this.enabled = true;
                this.volume = 0.5;
                this.highThreatAudio = document.getElementById('high-threat-audio');
                this.mediumThreatAudio = document.getElementById('medium-threat-audio');
                
                // Initialize settings from localStorage if available
                this.loadSettings();
                this.setupEventListeners();
            }

        loadSettings() {
            const settings = JSON.parse(localStorage.getItem('alertSettings') || '{}');
            this.enabled = settings.enabled ?? true;
            this.volume = settings.volume ?? 0.5;
            
            // Update UI
            document.getElementById('audio-alerts').checked = this.enabled;
            document.getElementById('alert-volume').value = this.volume * 100;
        }

        saveSettings() {
            localStorage.setItem('alertSettings', JSON.stringify({
                enabled: this.enabled,
                volume: this.volume
            }));
        }

        setupEventListeners() {
            document.getElementById('audio-alerts').addEventListener('change', (e) => {
                this.enabled = e.target.checked;
                this.saveSettings();
            });

            document.getElementById('alert-volume').addEventListener('input', (e) => {
                this.volume = e.target.value / 100;
                this.saveSettings();
                
                // Preview sound for high threat
                if (this.enabled) {
                    this.playAlert('high');
                }
            });
        }

        playAlert(threatLevel) {
            if (!this.enabled) return;

            const audio = threatLevel === 'high' ? this.highThreatAudio : this.mediumThreatAudio;
            audio.volume = this.volume;
            audio.currentTime = 0;
            audio.play().catch(e => console.log('Audio playback failed:', e));
            }
        }

        // Initialize alert system
        const alertSystem = new AlertSystem();

        // Modify your existing threat detection handler
        socket.on('threat_alert', (data) => {
            const alertsList = document.getElementById('alerts-list');
            const alertItem = document.createElement('div');
            alertItem.className = 'alert-item';
            
            const timestamp = new Date(data.timestamp).toLocaleTimeString();
            const threats = data.threats.map(t => t.class).join(', ');
            
            // Play alert sound based on highest threat level
            const highestThreat = data.threats.reduce((highest, threat) => {
                return threat.threat_level === 'high' ? 'high' : 
                    (highest === 'high' ? 'high' : threat.threat_level);
            }, 'medium');
            
            alertSystem.playAlert(highestThreat);
            
            alertItem.innerHTML = `
                <strong>${timestamp}</strong><br>
                Detected: ${threats}<br>
                Location: ${data.location}
            `;
            
            // Add visual pulse effect for high threats
            if (highestThreat === 'high') {
                alertItem.classList.add('active-alert');
            }
            
            alertsList.insertBefore(alertItem, alertsList.firstChild);
            
            if (alertsList.children.length > 5) {
                alertsList.removeChild(alertsList.lastChild);
            }
        });
